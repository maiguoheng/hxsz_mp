/* pages/news_info/news_info.wxss */
page{
  background-color: #f1f1f1
}

.list-left {
  width: 70%;
  margin-right: 5rpx;
}

.list-left .list-title {
  font-size: 35rpx;
  line-height: 49rpx;
  color: #3c3d3f;
  opacity: 0.8;
  margin-bottom: 20rpx;
  /*多行文本省略  */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.list-left .list-source-date {
  display: flex;
  flex-flow: row;
  overflow: auto;
  font-size: 24rpx;
  color: #838387;
  opacity: 0.6;
}

.list-left .list-source {
  margin-right: 20rpx;
}

.list-right {
  width: 30%;
}

.list-right image {
  width: 100%;
  height: 142rpx;
  display: inline-block;
  border-radius: 5rpx;
}

.swiper-item-list {
  background-color: rgba(255, 255, 255, 0.788);
  width: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  /*flex布局高度自适应必须加这个  */
  overflow: auto;
  border-bottom: 2rpx solid #eee;
}

.detail-container{
  height: 230rpx;
  /* padding:30rpx; */
  border-bottom: 1rpx solid rgba(134, 122, 122, 0.315);
}
.news-title{
  font-size: 45rpx;
  line-height: 63rpx;
  opacity: 0.8;
  margin-top:0rpx;
  margin-bottom: 15rpx;
}
.news-wrapper{
  font-size: 25rpx;
  line-height: 30rpx;
  opacity: 0.6;
  color:#999;
  display: flex;
  flex-flow: row;
  margin-bottom: 35rpx;
}
.news-wrapper-left{
  display: flex;
  flex-grow: 1; 
  flex-flow: row;
}
.news-wrapper-left view:first-child{
  margin-right:10rpx;
}
/*内容  */
.news-content{
  /* margin-left:10rpx; */
  font-size: 28rpx;
  line-height: 50rpx;
  padding:15rpx
}
.news-content-strong{
  font-style: bold;
  margin-bottom: 30rpx;
}
.news-content-image{
  width:100%;
  display: block;
  margin-bottom: 30rpx;
}
.news-content-p{
  color: #999;
  opacity: 0.8;
  margin-bottom:30rpx;
}


.to-end {
    padding: 20rpx;
}

.to-end text {
   color: #aaa!important;
    display:flex;
    justify-content: center;
    line-height: 1;
}

.notice {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    background: #3688ff;
}

.icon-view {
    width: 8%;
    text-align: center;
    color: #fff;
}

.marquee-box {
    position: relative;
    height: 70rpx;
    overflow: hidden;
    color: #fff;
}

.marquee-text {
    line-height: 70rpx;
    white-space: nowrap;
}

.pad{
  padding:0 20rpx;
}

.bg-white{
  background-color:#fff
}