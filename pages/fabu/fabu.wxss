.journal-container {
  margin-bottom: 40rpx;
  width: 600rpx;
  height: 400rpx;
  overflow: hidden;
  border-radius: 10rpx;
  box-shadow: 3rpx 3rpx 12rpx #5b5a5b;
 
}

.journal-preview {
  display: block;
  width: 600rpx;
  height: 400rpx;
}

.shade {
  position: relative;
  top: -130rpx;
  opacity: 0.8;
  background-color: #ebebeb;
  background-size: 100%;
  width: 600rpx;
  height: 92rpx;
}

.journal-info {
  display: flex;
  flex-direction: column;
  position: relative;
  right: -15rpx;
  bottom: -9rpx;
}

.title {
  font-size: 28rpx;
  color: #343435;
}

.date {
  font-size: 24rpx;
  color: #898890;
}

.flex{
  display:flex;
 height:400rpx;   
            
 flex-direction: row;

  justify-content: center;

  flex-wrap: wrap;
     
}
